<?xml version="1.0"?>
<!DOCTYPE workflow [

  <!ENTITY EXP_HOME "/scratch1/BMC/gsd-fv3/rtruns/CCPP-Chem">
  <!ENTITY FV3GFS_HOME "/scratch1/BMC/gsd-fv3/rtruns/CCPP-Chem">
  <!ENTITY PSLOT  "rt_ccpp_c384">
  <!ENTITY ATCFNAME "FV3CCPP_C384">          <!-- tracker name -->
  <!ENTITY MODL "FV3CCPP_C384">              <!-- plot name;  needs to have 'FV3' in name for NCL -->
  <!ENTITY ANX_MODEL "GFS">                 <!-- model analysis to use for AC stats -->
  <!ENTITY ATCFNAME "FV3CCPP_C384">               <!-- tracker name -->
  <!ENTITY AC_MODEL_NAME "FV3CCPP_C384">          <!-- AC stats name -->
  <!ENTITY SOUNDING_MODEL_NAME "FV3CCPP_C384">
  <!ENTITY SURFACE_MODEL_NAME "FV3CCPP_C384">
  <!ENTITY RES "0p25">
  <!ENTITY FCST_INTERVAL "6">
  <!ENTITY FCST_LENGTH "168">
